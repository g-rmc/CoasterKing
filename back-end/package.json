{
  "name": "coasterking_back",
  "version": "1.0.0",
  "description": "",
  "main": "server",
  "scripts": {
    "start": "node ./src/server",
    "lint": "eslint .",
    "dev": "NODE_ENV=development nodemon ./src/server.ts",
    "dev:load-envs": "dotenv -e .env.development",
    "dev:migration:generate": "npm run dev:load-envs prisma generate",
    "dev:migration:run": "npm run dev:load-envs prisma migrate dev",
    "dev:seed": "npm run dev:load-envs prisma db seed",
    "test": "npm run test:load-envs npx jest",
    "test:load-envs": "dotenv -e .env.test",
    "test:migration:generate": "npm run test:load-envs prisma generate",
    "test:migration:run": "npm run test:load-envs prisma migrate dev",
    "coverage": "npm run test -- --coverage"
  },
  "engines": {
    "npm": ">=8.0.0 <9.0.0",
    "node": ">=16.0.0 <17.0.0"
  },
  "keywords": [],
  "author": "g-rmc",
  "license": "ISC",
  "prisma": {
    "seed": "npm run dev:load-envs -- ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^4.9.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^7.0.0",
    "dotenv-expand": "^10.0.0",
    "express": "^4.18.2",
    "joi": "^17.7.0",
    "pg": "^8.8.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/jest": "^29.2.6",
    "@types/node": "^18.11.18",
    "@types/pg": "^8.6.6",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "eslint": "^8.32.0",
    "eslint-plugin-boundaries": "^3.1.0",
    "jest": "^29.3.1",
    "nodemon": "^2.0.20",
    "prisma": "^4.9.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
